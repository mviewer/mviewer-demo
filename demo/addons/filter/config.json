{
  "js": ["js/filter.js", "js/jquery.easyDrag.min.js"],
  "css": "css/filter.css",
  "html": "filter.html",
  "target": "page-content-wrapper",
  "options": {
    "mviewer": {
      "pacte": {
        "title": "Filtrer",
        "open": true,
        "zoomOnFeatures": true,
        "legendTitle": "Sélectionner une donnée :",
        "layers": [
          {
            "layerId": "structure_illetrisme",
            "downloadFormats": [
              { "label": "CSV", "format": "CSV" },
              { "label": "Shapefiles", "format": "SHAPE-ZIP" },
              { "label": "Geojson", "format": "application/json" },
              { "label": "Excel", "format": "excel" }
            ],
            "filter": [
              {
                "attribut": "publics",
                "type": "combobox",
                "label": "Public visé",
                "dataSeparator": ",",
                "updateOnChange": true
              },
              {
                "attribut": "critere",
                "type": "combobox",
                "label": "Critère",
                "dataSeparator": ",",
                "updateOnChange": true
              }
            ]
          }
        ]
      },
      "filter": {
        "tooltipPosition": "bottom",
        "title": "Filtrer",
        "open": true,
        "zoomOnFeatures": true,
        "legendTitle": "Sélectionner une donnée :",
        "layers": [
          {
            "layerId": "commune",
            "filter": [
              {
                "attribut": "nom",
                "type": "textbox",
                "label": "Commune",
                "updateOnChange": false
              }
            ]
          },
          {
            "layerId": "structures",
            "filter": [
              {
                "attribut": "dep",
                "type": "button",
                "label": "Départements",
                "updateOnChange": true
              },
              {
                "attribut": "ville",
                "type": "textbox",
                "label": "Ville",
                "updateOnChange": false
              },
              {
                "attribut": "form_jur",
                "type": "checkbox",
                "label": "Forme juridique",
                "updateOnChange": true,
                "dataSeparator": ","
              },
              {
                "attribut": "marche",
                "type": "combobox",
                "label": "Marché",
                "dataSeparator": ";",
                "updateOnChange": true
              }
            ]
          }
        ]
      }
    }
  }
}
